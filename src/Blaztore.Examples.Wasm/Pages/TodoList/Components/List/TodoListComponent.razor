@using Blaztore.Examples.Wasm.Pages.TodoList.Components.Creation
@inherits BlaztoreComponentBase<TodoListState>

@foreach (var task in State.TodoListItems)
{
    <TaskComponent Task="task"></TaskComponent>
}

@code {
    protected override Task OnAfterInitialRenderAsync() =>
        Dispatch(new TodoListState.Load());
}
